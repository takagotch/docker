version: "3"
servies:
  nginx: 
    image: tky/nginx-proxy:latest
    deploy:
      replicas: 3
      placement:
        constraints: [node.role != manager]
    environment:
      SERVICE_PORTS: 80
      BACKEND_HOST: echo_api:8080
    depends_on:
     - api
    networks:
     - ch03

  api:
    image: registry:5000/tky/echo:latest
    deploy:
      replicas: 3
      placement:
        constraints: [node.role != manager]
    networks:
     - ch03

networks:
  ch03:
    external: true

